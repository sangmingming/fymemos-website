---
import Layout from '../layouts/Layout.astro';
import "../styles/global.css";
import logo from '../assets/ic_launcher-playstore.png';
import phoneimage from '../assets/screen_phone.png';
import deskimage from '../assets/screen_desktop.png';

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---
<Layout>
	<!-- 导航栏 -->
	<nav class="bg-white shadow-sm fixed w-full z-10">
	  <div class="max-w-6xl mx-auto px-4 py-3 flex justify-between items-center">
		<h1 class="text-xl font-bold text-blue-600">FyMemos</h1>
		<a 
      href="/privacy"  
      class=" px-4 py-2 transition-colors">
      Privacy
    </a>
	  </div>
	</nav>
  
	<!-- 主要内容 -->
	<main class="pt-20 pb-12 px-4">
	  <!-- 应用介绍 -->
	  <section class="max-w-4xl mx-auto text-center mb-16">
		<div class="w-32 h-32 bg-blue-100 rounded-3xl mx-auto mb-6 p-6">
		  <img src={logo.src} alt="App Icon" class="w-full h-full"/>
		</div>
		<h2 class="text-4xl font-bold mb-4">FyMemos</h2>
		<p class="text-gray-600 text-lg mb-8 max-w-2xl mx-auto">
			An App helps you write, manage memos, works with <a href="https://www.usememos.com/">✍️memos.</a>.
			Crossplatform, support Android,iOS, Windows, Linux, Mac.
		</p>


	  </section>

	  <!-- 截图展示 -->
	  <section class="flex justify-center mb-16">
		<div class="flex gap-8">
			<img 
			src={phoneimage.src}
			alt="App Screenshot" 
			class="max-w-xs md:max-w-md w-full mx-auto mb-4"
		  />
		  <img 
			src={deskimage.src}
			alt="App Screenshot" 
			class="max-w-xs md:max-w-md w-full mx-auto mb-4"
		  />
		</div>
		
		<!-- 更多截图... -->
	  </section>

	  <section class="flex justify-center mb-16">
		<a href="https://play.google.com/store/apps/details?id=me.isming.fymemos"
		>
		 <img src="/play-badge.png" alt="Get it on Google Play" style="width: 181px; max-height: 54px;"/>
		</a>

		<a href="https://github.com/sangmingming/fymemos/releases/latest"
		>
		 <img src="/download_android_direct.svg" alt="Download Apk" style="width: 181px; max-height: 54px;"/>
		</a>
	  </section>

	  <!-- add faq here -->

	  <!-- 页脚 -->
	  <footer class="text-center text-gray-600">
		<p>&copy; 2025 FyMemos. All rights reserved.</p>
	  </footer> 
	  
	</main>
  </Layout>
